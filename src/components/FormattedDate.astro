---
interface Props {
  date: Date;
  locale: string;
  options?: Intl.DateTimeFormatOptions;
}

const {
  date,
  locale,
  options,
} = Astro.props as Props;

const formatter = new Intl.DateTimeFormat(locale, options ?? { year: 'numeric', month: 'short', day: 'numeric' });
const display = formatter.format(date);
---

<time datetime={date.toISOString()}>
  {display}
</time>
