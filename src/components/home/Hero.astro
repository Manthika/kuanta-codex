---
/* No props for now; uses the fixed copy & image you provided */
import { getTranslations, resolveLocale } from "../../i18n";

const locale = resolveLocale(Astro.currentLocale);
const hero = getTranslations(locale).home.hero;
---
<section class="home-hero" aria-labelledby="home-hero-title">
  <div class="hero__inner">
    <h1 id="home-hero-title" class="hero__title">
      {hero.title}
    </h1>

    <p class="hero__desc">{hero.description}</p>
    <p class="hero__tagline">{hero.subTagline}</p>
  </div>
</section>

<style>
/* ===== HERO (full-bleed, readable on mobile) ===== */
.home-hero{
  position: relative;
  inline-size: 100vw;
  margin-inline: calc(50% - 50vw);
  /* Use small/dynamic viewport units to avoid iOS/Chrome URL bar issues */
  min-height: 100svh; /* fallback below */
  min-height: 100dvh;

  background: url("/images/home/home-hero.jpg") center / cover no-repeat;
  display: grid;
  align-items: center;
  isolation: isolate;
  overflow-x: clip;
}

/* Readability overlay */
.home-hero::before{
  content: "";
  position: absolute;
  inset: 0;
  /* Top dark -> subtle bottom fade, improves contrast for white text */
  background: linear-gradient(180deg, rgba(0,0,0,0.55) 0%, rgba(0,0,0,0.35) 50%, rgba(0,0,0,0.25) 100%);
  z-index: 0;
}

.hero__inner{
  /* mobile-first container */
  --container-max: 1200px;
  box-sizing: border-box;
  width: 100%;
  max-width: var(--container-max);
  margin-inline: auto;
  padding-inline: clamp(16px, 4vw, 50px);
  padding-block: clamp(32px, 6vw, 64px);

  position: relative; /* ensure above overlay */
  z-index: 1;

  display: grid;
  justify-items: center;   /* mobile/tablet centered */
  text-align: center;
  row-gap: clamp(12px, 2.5vw, 20px);
}

.hero__title{
  margin: 0;
  color: #FDFDFF;
  text-shadow: 0 2px 12px rgba(0,0,0,0.45); /* softer, wider for mobile */
  font-family: "Vitro Core", Inter, system-ui, sans-serif;
  font-size: clamp(34px, 9vw, 96px); /* nudge down min for small phones */
  font-style: italic;
  font-weight: 900;
  line-height: 0.92;       /* a touch more breathing room */
  letter-spacing: -0.01em;
  text-transform: uppercase;

  overflow-wrap: normal;
  word-break: keep-all;
  hyphens: manual;
}

.hero__desc{
  margin: 0;
  color: rgba(253,253,255,0.85); /* higher contrast on mobile */
  font-family: "Vitro Core", Inter, system-ui, sans-serif;
  font-size: clamp(15px, 3.6vw, 22px); /* slightly larger on small screens */
  font-weight: 700;                    /* down from 900 for legibility */
  line-height: 1.4;
  letter-spacing: -0.005em;
  max-inline-size: 62ch;

  white-space: normal;
  overflow-wrap: anywhere;
  word-break: break-word;
  hyphens: auto;
  text-wrap: balance;
}

.hero__tagline{
  margin: 0;
  color: rgba(253,253,255,0.85);
  font-family: "Vitro Core", Inter, system-ui, sans-serif;
  font-size: clamp(14px, 3vw, 20px);
  font-style: italic;
  font-weight: 700;
  line-height: 1.45;
  letter-spacing: -0.01em;
  max-inline-size: 60ch;
  text-align: center;
}

/* Tablet+ */
@media (min-width: 768px){
  .hero__desc{
    font-size: clamp(16px, 2.2vw, 20px);
    line-height: 1.45;
  }
  .hero__tagline{
    font-size: clamp(15px, 2.1vw, 18px);
  }
}

/* Desktop: left align, bigger gutters */
@media (min-width: 1024px){
  .hero__inner{
    justify-items: start;
    text-align: left;
    padding-inline: clamp(32px, 4vw, 50px);
    padding-block: clamp(48px, 6vw, 96px);
  }
  .hero__title{ max-inline-size: 12ch; }
  .hero__tagline{ text-align: left; }
}

/* Safety for full-bleed */
:global(body){ overflow-x: hidden; }

/* Fallback for browsers without new viewport units */
@supports not (height: 1svh){
  .home-hero{ min-height: 100vh; }
}

</style>
